#!/bin/bash

# build nutch - add 

cd nutch
ant

# reconfig nutch for PunkSCAN use

cd ..
mv nutch_reconfig nutch/runtime/deploy
cd nutch/runtime/deploy
bash nutch_reconfig
cd ../../../

echo "Finished compiling and configuring nutch..."

# mrjob install

cd punkscan/punk_fuzzer/mrjob
echo "Going to install mrjob..."
sudo python setup.py install 

echo "Installer finished."
